# Install expat, libexpat (Ubuntu)
sudo apt-get install expat libexpat1 libexpat1-dev

# Compile and install sphinxsearch 0.9.9 with "--enable-id64" option
wget http://sphinxsearch.com/files/sphinx-1.10-beta.tar.gz
tar -xvzf sphinx-1.10-beta.tar.gz
cd sphinx-1.10-beta
./configure --without-mysql --enable-id64
make
sudo make install


##########################
# in langdev directory.. #
##########################

# Generate sphinx.conf
./gen_sphinx_conf.sh

# Indexing
indexer --config sphinx.conf --all

# start daemon
searchd -c sphinx.conf

